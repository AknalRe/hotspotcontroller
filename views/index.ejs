<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="icon" type="image/x-icon" href="https://merch.mikrotik.com/cdn/shop/files/512.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- <link rel="stylesheet" href="/publik/style.css"> -->
    <link rel="stylesheet" href="/static/styles/style.css">
    <script src="/static/scripts/script.js"></script>
    <title><%= !page ? title  : `${page} - ${title}`%></title>
</head>
<body>
    <div class="notifAll" id="notifAll"></div>

    <% if (halaman !== "halamanlogin") { %>
        <div class="main-page">
            <div class="page">
                <div class="wrap animated fadeIn">
                    <%- include(`partials/${halaman}`) %>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="ie-fixMinHeight">
            <div class="main">
                <div class="wrap animated fadeIn">
                    <%- include(`partials/${halaman}`) %>
                </div>
            </div>
        </div>
    <% } %>
    
    <footer>
        <div class="container-footer">
            <!-- <p>&copy; <%= new Date().getFullYear() %> Hak Cipta oleh AknalRe</p> -->
            <!-- <p>Copyright &copy; <%= new Date().getFullYear() %> <%= author %></p> -->
            <p>Copyright &copy; <%= new Date().getFullYear() %> <%= author %></p>
        </div>
    </footer>

    <%- include(`scripts/${halaman}`) %>
    <script src="/static/scripts/script.js"></script>
</body>
</html>